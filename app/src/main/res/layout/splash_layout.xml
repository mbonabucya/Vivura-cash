<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/greeny">

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img"/>
    <TextView
        android:id="@+id/ikaze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_id"
        android:layout_centerHorizontal="true"
        android:text="Ikaze kuri"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/vivuraSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ikaze"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Vivura Cash"
        android:textColor="@color/white"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vivuraSplash"
        android:layout_centerHorizontal="true"
        android:text="Powered by Katheos Group ltd"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="140dp"
        android:textStyle="bold" />



</RelativeLayout>