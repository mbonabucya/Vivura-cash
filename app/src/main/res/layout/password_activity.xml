<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/password_reset_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find My Phone Number"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:textColor="@color/greeny"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_below="@id/password_reset_txt"
        android:src="@drawable/img"/>


    <EditText
        android:id="@+id/pass_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Enter your Phone number"
        android:inputType="phone"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_btn"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@color/white"
        android:padding="0dp"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="20dp" />
</RelativeLayout>