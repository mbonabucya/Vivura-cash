<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/item_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/business_name_text"
            android:layout_toRightOf="@id/cardview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Katheos Group Ltd"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/business_contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardview1"
            android:text="+250788236645"
            android:layout_below="@id/business_name_text"
            android:layout_marginLeft="22dp"
            android:textSize="10dp"
            android:layout_marginTop="2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_relative"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp">
        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="&#8942;"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge" />
    </RelativeLayout>

</RelativeLayout>