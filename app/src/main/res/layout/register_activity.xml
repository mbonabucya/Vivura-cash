<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

   <!-- android:background="@drawable/img_1"-->


    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vivura Cash"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:background="@color/greeny"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/vivuraTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_below="@id/signup"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        />

 <EditText
     android:id="@+id/fname"
     android:layout_below="@id/vivuraTextview"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="10"
     android:inputType="textPersonName"
     android:hint="First name"
     android:drawableLeft="@drawable/ic_baseline_people_24"
     android:drawablePadding="5dp"
     android:layout_marginTop="22dp"
     android:layout_marginLeft="40dp"
     android:layout_marginRight="40dp"
     android:textSize="20dp"
     />

    <EditText
        android:id="@+id/lname"
        android:layout_below="@id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="last name"
        android:layout_marginTop="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:drawableLeft="@drawable/ic_baseline_people_24"
        android:drawablePadding="5dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/phoneNumber"
        android:layout_below="@id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="2dp"
        android:hint="0783312890"
        android:drawablePadding="5dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_below="@id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:hint="password"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:drawablePadding="5dp"
       />

    <EditText
        android:id="@+id/password2"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="confirm Password"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:drawablePadding="5dp"
        android:textSize="20dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_below="@id/password2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/register"
        android:background="@color/greeny"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:onClick="gohome"/>

    <TextView
        android:id="@+id/accountregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Have an Account ?"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:layout_below="@id/register"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_below="@id/accountregister"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/login"
        android:background="@color/white"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:padding="0dp"
        />







</RelativeLayout>
