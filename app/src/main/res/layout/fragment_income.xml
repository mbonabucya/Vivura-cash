<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business_income">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cash_in_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Cash In"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/greeny"/>

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cash_in_txtview"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="item"
            android:importantForAutofill="auto"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="quantity" />

        <EditText
            android:id="@+id/amount"
            android:layout_below="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:textColorHint="@color/black" />


        <EditText
            android:id="@+id/reason"
            android:layout_below="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint="Reason"
            android:inputType="textMultiLine"
            android:textColorHint="@color/black" />

        <TextView
            android:id="@+id/cashoutpaymenttxt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="56dp"
            android:text="Payment Mode"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/payment_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cashoutpaymenttxt"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="-17dp"
            android:layout_toRightOf="@+id/cashoutpaymenttxt"
            android:spinnerMode="dropdown" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cashoutpaymenttxt"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="65dp"
            android:background="@color/greeny"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_spinner"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="65dp"
            android:background="@color/greeny"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>


</FrameLayout>